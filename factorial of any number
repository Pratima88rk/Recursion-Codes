// program to find factorial of number of any number using recursion
import java.util.Scanner;
class Main {
    public static int factorial(int num){
        while(num>1){
            return num*factorial(num-1);
        }
        return 1;
    }
    public static void main(String[] args) {
        Scanner scano=new Scanner(System.in);
        System.out.println("Enter any number ");
        int number=scano.nextInt();
        int factorialcall=factorial(number);
        System.out.println("Factorial of "+number+" is "+factorialcall);
    }
}
